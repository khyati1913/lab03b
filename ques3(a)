#include <stdio.h>

int main() {
    int rows, i, j;
    int num = 1;
    printf("Enter number of rows for part (a): ");
    scanf("%d", &rows);

    for (i = 1; i <= rows; i++) {
        // print leading spaces
        for (j = 1; j <= rows - i; j++) {
            printf(" ");
        }
        // print continuous numbers
        for (j = 1; j <= i; j++) {
            printf("%d ", num);
            num++;
        }
        printf("\n");
    }
    return 0;
}
